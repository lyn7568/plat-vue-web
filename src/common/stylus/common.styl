@import './mixin';

body
  background:#f4f6f8

a
  color: $mainFont

.contain-wrapper
  box-sizing: content-box
  width: 1100px
  padding: 0 10px
  position:relative
  margin:auto
  clear:both
  font-size:15px

.block-wrapper
  margin-bottom:20px

.content-wrapper
  box-sizing: border-box
  padding:20px
  background:#fff

/*左右分栏*/
.main-content
  display: flex
  justify-content: space-between
  .wrapper-left
    width:800px
  .wrapper-right
    width: 280px
.ad-wrapper
  position: relative
  display: block
  margin-bottom: 10px
  &:after
    content:"广告"
    font-size:10px
    color:#fff
    background:rgba(0,0,0,0.3)
    position:absolute
    padding:0 4px
    right:0
    bottom:0px
/*左右分栏*/

.content-title
  display:flex
  justify-content: space-between
  font-size:16px
  line-height:30px
  font-weight: bold
  color:$mainFont
  margin-bottom:12px
  .content-more
    font-size:13px
    color:$secondaryFont

/*form-css*/
.frmtype
  width:100%
  box-sizing: border-box
  border:none
  border:1px #d2d2d2 solid
  height:46px
  background: #f5f6f8
  padding:4px 10px
  font-size:14px
  outline: none
  &.btnModel
    margin:20px 0 0
    color:#FFFFFF
    border:none
    cursor:pointer
    background:$mainColor
.fontLink
  background:none
  border:none
  color:$mainColor
  font-size:13px
.frmmsg
  position:relative
  padding-left:20px
  line-height:28px
  color: #fd5f39
  &:before
    content: ''
    position: absolute
    left: 0
.frmmsg-warning
  border: 1px solid #fd5f39
/*form-css*/


.el-button--primary
  background-color: $mainColor;
  border-color: $mainColor;

/*认证标识相关*/
.authicon
  display: inline-block
  margin-left:4px
  width:16px
  height:16px
  background-size: cover
  &.icon-pro
    bg-image($iconPro)
  &.icon-com
    bg-image($iconCmp)
  &.icon-staff
    bg-image($iconStaff)
  &.icon-real
    width:24px
    bg-image($iconReal)